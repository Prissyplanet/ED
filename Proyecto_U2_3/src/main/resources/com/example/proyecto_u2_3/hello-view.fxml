<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.example.proyecto_u2_3.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Bienvenido, doctor/a">
      <font>
         <Font name="Arial Narrow" size="25.0" />
      </font>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </Label>
   <TextField fx:id="txtUsuarioDoc" alignment="TOP_CENTER" promptText="Usuario" />
   <PasswordField fx:id="passDoc" alignment="TOP_CENTER" promptText="Contraseña" />
    <Button onAction="#ingresar" text="Ingresar">
      <opaqueInsets>
         <Insets top="2.0" />
      </opaqueInsets>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <effect>
         <DropShadow height="10.0" radius="5.0" width="12.0" />
      </effect></Button>
   <Label text="¿No posee una cuenta?" />
   <Hyperlink onAction="#registrarCuenta" text="Registrarse aquí" underline="true">
      <VBox.margin>
         <Insets bottom="-10.0" left="-10.0" right="-10.0" top="-10.0" />
      </VBox.margin>
   </Hyperlink>
   <Label text="¿Es un recepcionista? " />
   <Hyperlink onAction="#ingresarRecepcionista" text="Iniciar sesión aquí" underline="true" />
   <Hyperlink onAction="#registrarRecepcionista" text="Registrarse como recepcionista aquí" underline="true" />
</VBox>
